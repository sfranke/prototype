div.container
  link(href='stylesheets/style.css', rel='stylesheet')
  div#main
    div#content
      row
        img(src="../images/CBM_logo.svg")#logo
      row
        h1(style="text-align: center;") Eignungstest

        div.container(style="text-align: center;")
          row
            p=locals.locals.user.gender + ' ' + locals.locals.user.name
            p erreichte am #{time} im CBM-Eignungstest
          row
            h4=locals.locals.percentage + ' Prozent'
          - if (locals.percentage > 50)
            p und hat damit den Test bestanden.
          - else
            p und hat damit den Test nicht bestanden.

          row.col-md-12
            div#seperator
        div.container(style="text-align: center; padding-bottom: 100px")
          row.col-md-12
            div.col-md-2 
            div.col-md-10#overall='Die erreichten Punkte setzen sich wie folgt zusammen:'
          row.col-md-12
            div.col-md-2 
            div.col-md-4#overall
              h4='Gesamt'
            div.col-md-4
              h4#points=locals.locals.overall[0] + ' von ' + locals.locals.overall[1] + ' Punkten'
            div.col-md-2
          row.col-md-12
            div#seperator

          - each entry in locals.locals.categories
            row.col-md-12
              div.col-md-2
              div.col-md-4#category='In der Kategorie ' + entry.category
              div.col-md-4#points=entry.points + ' von ' + entry.maxPoints  + ' Punkten'
              div.col-md-2
