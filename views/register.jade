extends layout

block content
  link(href='stylesheets/style.css', rel='stylesheet')
  div#main
    div#content
      row
        img(src="../images/CBM_logo.svg")#logo
        div(class='clearfix')
        br
        br
      .container#register
        - if (message.length >= 1)
          div.alert.alert-danger= message
        form.form-register#registerform(method='post', style='width: 50%;')
          h2.form-register-heading
          |     
          input(type="radio", name="gender", value="Herr", checked="male")
          | Herr
          |     
          input(type="radio", name="gender", value="Frau")
          | Frau
          |     
          div(class='clearfix')
          br
          label.sr-only(for='inputName') Name
          |     
          input#inputName.form-control(type='text', name='name', placeholder='Vor- und Nachname: Max Mustermann', required='true', autofocus='')
          |     
          label.sr-only(for='inputEmail') Email address
          |     
          input#inputEmail.form-control(type='email', name='email', placeholder='MaxMustermann@gmail.com', required='true')
          |     
          label.sr-only(for='inputPassword') Password
          |     
          input#inputPassword.form-control(type='password', name='password', placeholder='_aV3ryStronkPa$$word?', required='true')
          |     
          div(class='clearfix')
          br
          button.btn.btn-lg.btn-success.btn-block(type='submit')#registerNow Registrieren

  include footer
