doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Bootstrap
    link(href='css/bootstrap.css', rel='stylesheet')
  body(style='font-size: 9px')
  div
    div#main(style='margin-top: 20%')
      div#content
        row
          div
            h1(style="text-align: center;") Eignungstest
          div#seperator

          div.container(style="text-align: center;")
            row
              div
                p=locals.user.gender + ' ' + locals.user.name
                p erreichte am #{time} im CBM-Eignungstest
            row
              div
                h5=locals.percentage + ' Prozent'
              - if (locals.percentage > 50)
                p und hat damit den Test bestanden.
              - else
                p und hat damit den Test nicht bestanden.
              div#seperator
              div#seperator

            row.col-xs-12.col-sm-12.col-md-12
              div#seperator
          div.container(style="text-align: center; padding-bottom: 100px")
            row.col-xs-12.col-sm-12.col-md-12
              div.col-xs-1.col-sm-1.col-md-2
              div.col-xs-10.col-sm-10.col-md-10#overall='Die erreichten Punkte setzen sich wie folgt zusammen:'
            row.col-xs-12.col-sm-12.col-md-12
              div.col-xs-1.col-sm-1.col-md-2 
              div.col-xs-5.col-sm-5.col-md-4#overall
                h5='Gesamt'
              div.col-xs-5.col-sm-5.col-md-4
                h5#points=locals.overall[0] + ' von ' + locals.overall[1] + ' Punkten'
              div.col-xs-1.col-sm-1.col-md-2
            row.col-xs-12.col-sm-12.col-md-12
              div#seperator

            - each entry in locals.categories
              row.col-xs-12.col-sm-12.col-md-12
                div.col-xs-1.col-sm-1.col-md-2
                div.col-xs-6.col-sm-6.col-md-4#category='In der Kategorie ' + entry.category
                div.col-xs-4.col-sm-4.col-md-4#points=entry.points + ' von ' + entry.maxPoints  + ' Punkten'
                div.col-xs-1.col-sm-1.col-md-2
